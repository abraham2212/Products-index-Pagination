@model IEnumerable<SliderInfo>
@{
    ViewData["Title"] = "SliderInfo";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() == 0)
                {
                    <a class="btn btn-primary my-3 create-item" asp-action="Create">Create</a>
                }
                @if(Model.Count() > 0)
                {
                    <a class="btn btn-primary my-3 create-item-none d-none" asp-action="Create">Create</a>

                    <table class="table table-dark slider-info-table">

                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> Title </th>
                                <th> Operations </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sliderInfo in Model)
                            {
                                <tr>
                                    <td class="img">
                                        <img src="~/img/@sliderInfo.SignatureImage" />
                                    </td>
                                    <td style="width:1px;">@Html.Raw(sliderInfo.Title)</td>
                                    <td data-id ="@sliderInfo.Id">
                                        <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@sliderInfo.Id">Info</a>
                                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@sliderInfo.Id">Edit</a>
                                        <a class="btn btn-outline-danger delete-item" >Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
             
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/admin/assets/js/admin.js"></script>
}
