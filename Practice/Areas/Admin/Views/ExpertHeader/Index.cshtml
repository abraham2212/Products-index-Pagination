@model IEnumerable<ExpertHeader>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                
                @if(Model.Count() == 0)
                {
                    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
                }
                @if(Model.Count() > 0)
                {
                    <a class="btn btn-primary my-3 d-none create-item-none" asp-action="Create">Create</a>
                    <table class="table table-dark expertHeader-table">
                        <thead>
                            <tr>
                                <th> Title </th>
                                <th> Description </th>
                                <th> Operations </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td style="width:60px;">@item.Description</td>
                                    <td data-id="@item.Id">
                                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-outline-danger expertHeader-delete-btn" >Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/assets/js/admin.js"></script>
}
