@model IEnumerable<Subscribe>
@{
    ViewData["Title"] = "Subscribe";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                @if (Model.Count() == 0)
                {
                    <a class="btn btn-primary my-3 subs-item" asp-action="Create">Create</a>
                }
               
                @if (Model.Count() > 0)
                {
                    <a class="btn btn-primary my-3 subs-none d-none" asp-action="Create">Create</a>
                    <table class="table table-dark subs-table">

                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> Title </th>
                                <th> Operations </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subscribe in Model)
                            {
                                <tr>
                                    <td class="img">
                                        <img src="~/img/@subscribe.Image" />
                                    </td>
                                    <td>
                                        @subscribe.Title
                                    </td>
                                    <td data-id="@subscribe.Id">
                                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@subscribe.Id">Edit</a>
                                        <a class="btn btn-outline-danger delete-subs-btn">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/admin/assets/js/admin.js"></script>
}

