
@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Blog";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <a class="btn btn-primary my-3" asp-action="Create">Create</a>
                @if(Model.Count() > 0)
                {
                    <table class="table table-dark blog-table">
                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> Title </th>
                                <th> Create date </th>
                                <th> Status </th>
                                <th> Operations </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model)
                            {
                                <tr>
                                    <td class="img">
                                        <img src="~/img/@blog.Image" />
                                    </td>
                                    <td style="width:100px;">
                                        @blog.Title
                                    </td>
                                    <td style="width:100px;">
                                        @blog.Date.ToString("MM.dd.yyyy")
                                    </td>
                                    <td class="statutes" data-id="@blog.Id">
                                        @if (blog.IsActive)
                                        {
                                            <div class="de-active blog-status"></div>
                                        }
                                        else
                                        {
                                            <div class="active-status blog-status"></div>
                                        }
                                    </td>
                                    <td data-id="@blog.Id">
                                        <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@blog.Id">Info</a>
                                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@blog.Id">Edit</a>
                                        <a class="btn btn-outline-danger delete-blog-item">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/admin/assets/js/admin.js"></script>
}
