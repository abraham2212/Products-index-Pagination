@model IEnumerable<ExpertExpertPosition>
@{
    ViewData["Title"] = "Expert";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <a class="btn btn-primary my-3" asp-action="Create">Create</a>
                @if(Model.Count() > 0)
                {
                    <table class="table table-dark">

                        <thead>
                            <tr>
                                <th> Image </th>
                                <th> Name </th>
                                <th> Position </th>
                                <th> Operations </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var expert in Model)
                            {
                                <tr>
                                    <td class="img">
                                        <img src="~/img/@expert.Expert.Image" />
                                    </td>
                                    <td style="width:100px;">
                                        @expert.Expert.Name
                                    </td>
                                    <td style="width:100px;">
                                        @expert.ExpertPosition.Name
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@expert.Id">Info</a>
                                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@expert.Id">Edit</a>
                                        <a class="btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
              
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/admin/assets/js/admin.js"></script>
}

